<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/gagangiriview"
        android:layout_width="match_parent"
        android:layout_height="316dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="-3dp"
        app:shapeAppearanceOverlay="@style/ImageViewShape"
        app:srcCompat="@drawable/gagangir" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="103dp"
        android:layout_height="78dp"
        android:layout_marginStart="-18dp"
        android:layout_marginTop="-11dp"
        android:background="#00000000"
        android:contentDescription="backbutton"
        android:paddingTop="12dp"
        app:srcCompat="@drawable/back2" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="164dp"
        android:text="GAGANGIRI MATH"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ambernathloc"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/thaneloc" />

    <ImageView
        android:id="@+id/share"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="263dp"
        android:layout_marginTop="227dp"
        android:background="@android:color/white"
        android:src="@drawable/share1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="406dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-4dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="228dp"
        android:text="@string/gagangiri_math"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="643dp"
        android:text="NEARBY CAFE"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="6dp"
        android:orientation="horizontal">


        <!-- Cafe 1 -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/cafe_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/cafe11" />

            <TextView
                android:id="@+id/cafe1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cafe_image1"
                android:layout_centerHorizontal="true"
                android:text=" Dream café "
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="normal" />
        </RelativeLayout>

        <!-- Cafe 2 -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/cafe_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="63dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/cafe12" />

            <TextView
                android:id="@+id/cafe2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cafe_image2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="51dp"
                android:layout_marginTop="-2dp"
                android:text="Café crème kuka "
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="normal" />
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/fav1"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="5dp"
        app:srcCompat="@drawable/favourite" />


</RelativeLayout>
