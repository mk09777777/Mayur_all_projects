<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CardView to wrap the ImageView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="312dp"
        android:layout_height="302dp"

        android:outlineSpotShadowColor="@color/black"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="38dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="15dp">

        <!-- ImageView inside the CardView -->
        <ImageView
            android:id="@+id/fortimg"
            android:layout_width="342dp"
            android:layout_height="343dp"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/titlefort"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="80dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
android:layout_width="352dp"
android:layout_height="2dp"
android:layout_below="@id/titlefort"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="28dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="31dp"
    android:background="@android:color/black" />

    <TextView
        android:id="@+id/ratingfort"
        android:layout_width="93dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="440dp"
        android:background="@drawable/textview"
        android:paddingTop="5dp"
        android:text="ENTER_TEXT"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descriptionfort"
        android:layout_width="366dp"
        android:layout_height="247dp"
        android:layout_below="@id/ratingfort"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="22dp"
        android:paddingTop="10dp"
        android:text="ENTER_TEXT"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

</RelativeLayout>
