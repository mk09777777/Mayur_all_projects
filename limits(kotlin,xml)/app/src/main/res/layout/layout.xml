<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:ignore="MissingClass">

    <ScrollView
        android:layout_width="401dp"
        android:layout_height="539dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.953">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/limitsettings"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="242dp"
                android:layout_height="92dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="76dp"
                android:background="@color/teal_700"
                android:text=" LIMIT SETTINGS"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Display3"
                android:textColor="@color/white"
                android:textSize="23dp"
                android:textStyle="bold"
                tools:ignore="DuplicateIds" />

            <Button
                android:id="@+id/parentalnotifications"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="241dp"
                android:layout_height="88dp"
                android:layout_below="@id/limitsettings"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="82dp"
                android:layout_marginTop="44dp"
                android:background="@color/teal_700"
                android:text=" PARENTAL NOTIFICATIONS"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Display3"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/checkprogress"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="234dp"
                android:layout_height="92dp"
                android:layout_below="@id/parentalnotifications"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="49dp"
                android:layout_marginEnd="81dp"
                android:background="@color/teal_700"
                android:text="CHECK PROGRESSBAR"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Display3"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"></Button>

        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="915dp"
        android:layout_height="170dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/speed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="167dp"
        android:layout_height="92dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:text="LIMITS"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
